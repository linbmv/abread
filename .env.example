# 应用密码（默认为 admin123）
APP_PASSWORD=admin123

# 时区设置（默认为 Asia/Shanghai）
TIMEZONE=Asia/Shanghai

# 最大未读天数（默认为 7）
MAX_UNREAD_DAYS=7

# Vercel Cron 任务密钥（用于保护定时任务）
CRON_SECRET=your_cron_secret_here

# WhatsApp Baileys (可选，用于直接发送消息，需要首次登录)
WHATSAPP_BAILEYS_ENABLED=false
WHATSAPP_BAILEYS_RECIPIENT_PHONE=recipient_phone_number
WHATSAPP_BAILEYS_AUTO_INIT=false

# Bark (可选, iOS推送)
BARK_URL=your_bark_url

# 通用 Webhook (可选)
WEBHOOK_URL=your_webhook_url