{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "outputDirectory": "frontend/dist",
  "rewrites": [
    {
      "source": "/api/verify-password",
      "destination": "/api/verify-password.js"
    },
    {
      "source": "/api/users",
      "destination": "/api/users.js"
    },
    {
      "source": "/api/users/:id",
      "destination": "/api/users/[id].js"
    },
    {
      "source": "/api/statistics",
      "destination": "/api/statistics.js"
    },
    {
      "source": "/api/statistics/send",
      "destination": "/api/statistics-send.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 4 * * *"
    }
  ]
}
