{
  "version": 2,
  "framework": "vite",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@1.0.1"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "crons": [
    {
      "path": "/api/cron",
      "schedule": "0 4 * * *"
    }
  ]
}